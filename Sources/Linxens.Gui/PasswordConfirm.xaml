<Window x:Class="Linxens.Gui.PasswordConfirm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Linxens.Gui"
      mc:Ignorable="d"
      Title="Password Confirm" Height="85.994" Width="433"
      ResizeMode="NoResize">

    <Grid Margin="0,10,0,1">
        <Button x:Name="btOk" Content="Ok" HorizontalAlignment="Left" Margin="340,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="23"/>
        <Label Content="Enter your password :" HorizontalAlignment="Left" Height="25" Margin="10,9,0,0" VerticalAlignment="Top" Width="138"/>
        <PasswordBox x:Name="pwdResponse" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" Height="23" Width="187" KeyUp="PwdResponse_OnKeyUp"/>


    </Grid>
</Window>
